---
import TopLogo from './logos/TopLogo.astro';
interface PROPS {
    linkColor?: string;
}
const {linkColor = '#FFFFFF'} = Astro.props as PROPS;
---
<nav>
    <ul>
        <li><a href="/conocenos">Con√≥cenos</a></li>
        <li><a href="/soluciones">Soluciones</a></li>
        <li>
            <a href="/">
                <div class="logo-top">
                    <TopLogo />
                </div>
            </a>
        </li>
        <li><a href="/ubicaciones">Ubicaciones</a></li>
        <li><a href="#contacto">Contacto</a></li>
    </ul>
</nav>

<style lang="scss" define:vars={{ linkColor }}>
    nav {
        display: block;
        text-align: center;
        padding: 30px 0;
        position: sticky;
        top: 0;
        left: 0;

        ul {
            display: flex;
            flex-wrap: nowrap;
            justify-content: center;
            align-items: center;
            list-style: none;
            padding: 0;
            margin: 0;
            gap: 90px;

            li {
                a {
                    text-decoration: none;
                    color: var(--linkColor);
                    text-transform: uppercase;
                    font-size: 12px;
                    font-family: var(--zion-ff-avenir);
                    font-weight: 600;
                    letter-spacing: 1px;

                    .logo-top {
                        display: block;
                        width: 80px;
                        height: 90px;
                        text-align: center;
                    }

                    &:hover {
                        color: #F62F42;
                    }
                }
            }
        }
    }
</style>